<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nit.book.shop.mapper.MessageMapper">

    <select id="findMessages" resultType="com.nit.book.shop.entity.Message">
        select * from message  where (receive_uid = #{uid} or send_uid = #{uid}) and type = #{type} and parent_id = 0
    </select>
</mapper>
